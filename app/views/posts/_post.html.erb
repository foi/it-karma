<% $post_color = post.color -%>
<div class="title" style="border-bottom: 3px solid <%= $post_color %>"><%= link_to_unless_current h(post.title), post -%></div>
<div class="content">
<% if controller.action_name == 'show' and controller.controller_class_name == 'PostsController' -%>
  <%= post.body -%>
<% else -%>
  <%= truncate_html post.body, :length => 1330 -%><span class="continue_reading"><%= link_to "#{t :continue_reading}", post_path(post) -%></span>
<% end -%>
</div>
<div class="tags">
  <p>
    <% for tag in post.tags -%>
      <%= link_to tag, tag_path(tag.name) -%>
    <% end -%> 
  </p>
</div>
<div class="comments"><%= link_to post.comments.size, post_path(post) -%></div>