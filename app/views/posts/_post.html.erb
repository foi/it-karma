<% $post_color = post.color %>
<div id="title" style="border-bottom: 3px solid <%= $post_color %>"><%= link_to_unless_current h(post.title), post %></div>
<div id="content"><%= post.body %> </div>
<div id="tags">
	<p>
		<% for tag in post.tags %>
		  <%= link_to tag, tag_path(tag.name) %> 
		<% end %>
  </p>
</div>
<div id="comments"><%= link_to post.comments.size, post_path(post) %></div>