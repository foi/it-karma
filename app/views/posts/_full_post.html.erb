<% @posts.each do |post| %>
	<div class="wrapper">
		<%= render :partial => 'posts/astro', :locals => { :post => post } %>
		<div class="wrapper_post">
		  <%= render :partial => 'posts/post', :locals => { :post => post } %>
		<br />
	  <% if admin? %>
		    <%= link_to 'изменить', edit_post_path(post) %>
		    <%= link_to 'уничтожить', post, :confirm => 'уверен?', :method => :delete %>
		<% end %>
		</div>
  </div>
<% end %>